<h1>Update Troop</h1>

<%= form_tag "/troops/#{@troop['id']}", method: :patch do %>

  <%= label_tag :name %>
  <%= text_field_tag :name, @troop['name'] %>

  <%= label_tag :latitude %>
  <%= text_field_tag :latitude, @troop['latitude'] %>

  <%= label_tag :longitude %>
  <%= text_field_tag :longitude, @troop['longitude'] %>

  <%= label_tag :address %>
  <%= text_field_tag :address, @troop['address'] %>

  <%= label_tag :contacts %>
  <%= text_field_tag :contacts, @troop['contacts'] %>

  <%= submit_tag "Update Troop" %>
<% end %>