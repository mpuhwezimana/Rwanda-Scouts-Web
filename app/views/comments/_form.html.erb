<%= form_for([@post, @post.comments.build]) do |f| %>
  <%= f.label :name %><br>
  <% if current_user %>
    <%= f.text_field :name, required: true, value:current_user.name%>
  <% else %>
    <%= f.text_field :name, required: true%>
  <% end %>
  <br>
  <%= f.label :body %><br>
  <%= f.text_area :body %><br>
  <br>
  <%= f.submit %>
<% end %>


