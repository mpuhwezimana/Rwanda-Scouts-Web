<div class="comment clearfix">
  <div class="comment_content">
     <h3><i class="fa fa-comment"></i> <%= comment.name %>:
    <small> <%= time_ago_in_words(comment.created_at) %> Ago</small></h3>
                <p><%= raw(comment.body) %></p>
  </div>

  <p><%= link_to 'Delete Comment', [comment.post, comment], method: :delete, class: "button",  data: { confirm: 'Are you sure?' } %></p>
</div>

