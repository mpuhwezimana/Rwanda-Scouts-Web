<h1>Edit Post:</h1>

<%= form_tag "/posts/#{@post.id}", method: :patch do %>
  <div>
    Title: <input type="text" name="title" value="<%= @post.title %>" >
  </div>
  <div>
    Body: <input type="text" name="body" value="<%= @post.body %>">
  </div>
  <div>
    <input type="submit" name="Create Post">
  </div>
<% end %>