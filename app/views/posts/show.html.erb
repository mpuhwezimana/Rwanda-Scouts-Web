<div class="container">
  <% if current_user%>
    <%= button_to "Delete Post", "/posts/#{@post.id}", method: :delete, :data => {:confirm => 'Are you sure?'} %>
    <%= button_to "Edit Post", "/posts/#{@post.id}/edit", method: :get, :data => {:confirm => 'Are you sure?'} %>
  <% end %>

  <h1 style="text-align: center; color: purple;"><%= @post.title %></h1>
  <h5 style="text-align: center;">Written by: <%= @post.author %></h5>
  <img src="<%= @post.image %>" class="img-responsive">
  <p><%= raw(@post.body) %></p>

  <% if current_user%>
    <div id="comments">
      <h2><%= @post.comments.count %> Comments</h2>
      <%= render @post.comments %>

      <h3>Add a comment:</h3>
      <%= render "comments/form" %>
    </div>
  <% end %>
</div>