<div class="discussion_comment clearfix">
  <div class="comment_content">
    <p class="comment_name"><strong><%= discussion_comment.name %></strong></p>
    <p class="comment_body"><%= discussion_comment.body %></p>
    <p class="comment_time"><%= time_ago_in_words(discussion_comment.created_at) %> Ago</p>
  </div>

  <p><%= link_to 'Delete Comment', [discussion_comment.discussion, discussion_comment], method: :delete, class: "button",  data: { confirm: 'Are you sure?' } %></p>
</div>